<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmTracker.EntityDetailsPage"
             xmlns:model="clr-namespace:FarmTracker.Model"
             xmlns:viewmodels="clr-namespace:FarmTracker.ViewModel"
             xmlns:mvvm="clr-namespace:MvvmHelpers;assembly=MvvmHelpers"
             x:DataType="viewmodels:EntityDetailsViewModel"
             x:Name="EntityDetailsPageName">

    <ContentPage.BindingContext>
        <viewmodels:EntityDetailsViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout
        Padding="10"
        >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ListView  ItemsSource="{Binding Details}"
                    IsRefreshing="{Binding IsItemsRefreshing}"
                    RefreshCommand="{Binding ItemsRefreshCommand}"
                    IsPullToRefreshEnabled="True"
                    HasUnevenRows="True" Grid.RowSpan="2" Grid.ColumnSpan="2">
                    <ListView.Header>
                        <ContentView>
                            <Label 
                            Text="Details"
                            FontSize="Title"
                            TextColor="#3F9704"
                            />
                        </ContentView>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:Detail">
                            <ViewCell  Height="120">
                                <ViewCell.ContextActions>
                                    <MenuItem 
                                        Command="{Binding 
                                        Source={x:Reference EntityDetailsPageName}, 
                                        Path=BindingContext.DeleteCommand}"
                                        CommandParameter="{Binding .}"
                                        Text="Delete"/>
                                </ViewCell.ContextActions>
                                <Frame  HorizontalOptions="FillAndExpand"  HasShadow="True"  Margin="0,5,0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="10*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Image 
                                            Grid.RowSpan="3"
                                            Source="{Binding Image}"  />
                                        <Label
                                            Grid.Column="1"
                                            Text="{Binding Name}"
                                            TextColor="#1e1e1e"
                                            FontSize="Medium"
                                            VerticalTextAlignment="End"
                                            />
                                        <Label
                                            Grid.Column="1"
                                            Grid.Row="1"
                                            Text="{Binding Description}"
                                            TextColor="#808080"
                                            FontSize="Small"
                                            VerticalTextAlignment="End"
                                            />
                                        <Label
                                            Grid.Column="1"
                                            Grid.Row="2"
                                            Text="{Binding Date, StringFormat='{0:yyyy-dd-MM}'}"
                                            TextColor="#808080"
                                            FontSize="Small"
                                            VerticalTextAlignment="Start"
                                            />
                                    </Grid>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Frame 
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    BackgroundColor="#66AF33"
                    CornerRadius="100"
                    Margin="0,0,10,10"
                    >
                </Frame>
                <Button
                    Command="{Binding AddItemCommand}"
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="+"
                    TextColor="#fff"
                    BackgroundColor="Transparent"
                    FontSize="32"
                    Margin="0,0,3,0"
                    Padding="0"
                    />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>